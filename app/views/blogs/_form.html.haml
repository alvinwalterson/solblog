= form_for @blog, url: (@blog.new_record? ? blogs_path(type: @type, name: @name, category: @category) : blog_path(type: @type, name: @name, category: @category)), method: (@blog.new_record? ? :post : :put) do |f|

	%div
		%table{:align=>'center'}
			%tr
				%td
					= f.label :title
				%td
					= f.text_field :title				
			%tr
				%td
					= f.label :body
				%td
					= f.text_area :body, rows: 10
			%tr
				%td
					= f.label :picture
				%td
					= f.file_field :picture
			%tr
				%td{:colspan=>2, :align=>'center'}
					%pre
						= f.submit :submit