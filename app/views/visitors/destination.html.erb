<div class="col-sm-12">
    <div class="header">
        <%= image_tag @photo, class: "blog_big_img", title: @photo %>
    </div>
    <div class="submenu">
        <div style="width:15%" class="pull-left"><hr/></div>
        <%= link_to 'eat', 'javascript:void(0)', data: {target: '#eat_blog_div'}, class: 'submenu_title pull-left' %>
        <div style="width:14%;" class="pull-left"><hr/></div>
        <%= link_to 'play', 'javascript:void(0)', data: {target: '#play_blog_div'}, class: 'submenu_title pull-left' %>
        <div style="width:14%;" class="pull-left"><hr/></div>
        <%= link_to 'stay', 'javascript:void(0)', data: {target: '#stay_blog_div'}, class: 'submenu_title pull-left' %>
        <div style="width:15%;" class="pull-left"><hr/></div>
    </div>

    <div id="location_blog_div">
        <div class="sol_blog_section">
            <div class="pull-left" style="width:40%"><hr/><hr/></div>
            <div class="pull-left" style="width:20%"><h2>STORY</h2></div>
            <div class="pull-left" style="width:40%"><hr/><hr/></div>
            <div style="clear: both;"></div>
        </div>
        <br />
        <div class="sol_blog_main">
            <% unless @destination.nil? %>
                <div>
                    <%= image_tag @destination.picture.url, class: "blog_mid_img" %>
                </div>
                <div class="blog_title">
                    <%= @destination.title %>
                </div>
                <div class="blog_content">
                    <%= raw @destination.body %>
                </div>
            <% end %>
        </div>
        <div>
            <div class="sol_blog_section">
                <div class="pull-left" style="width:40%"><hr/><hr/></div>
                <div class="pull-left" style="width:20%"><h2>TOP <%= @featured_blogs.count   %></h2></div>
                <div class="pull-left" style="width:40%"><hr/><hr/></div>
                <div style="clear: both;"></div>
            </div>

            <div class="row">
                <div class="col-sm-8">
                    <% @featured_blogs.each_with_index do |blog, index| %>
                        <%= image_tag blog.picture.url, id: "featured-img-#{index}", class: "#{index == 0 ? 'show' : 'hidden'} featured_image" %>
                    <% end %>
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <div class="col-sm-12" data-current="0" data-total="<%= @featured_blogs.count %>" id="control-bar">
                            <%= image_tag '/assets/themes/light/panel-prev-big.png', class: 'pull-left', id: "featured-left"%>
                            <div id="featured-status" class="pull-left"></div>
                            <%= image_tag '/assets/themes/light/panel-next-big.png', class: 'pull-right', id: "featured-right"%>
                        </div>
                    </div>
                    <% @featured_blogs.each_with_index do |blog, index| %>
                        <p id="featured-blog-<%=index %>", class="<%= index == 0 ? 'show' : 'hidden'%> featured_blog" >
                            <%= raw blog.body%>
                        </p>
                    <% end %>
                </div>
            </div>
        </div>
        <div>
            <div class="sol_blog_section">
                <div class="pull-left" style="width:40%"><hr/><hr/></div>
                <div class="pull-left" style="width:20%"><h2>PHOTOS</h2></div>
                <div class="pull-left" style="width:40%"><hr/><hr/></div>
                <div style="clear: both;"></div>
            </div>

            <div class="row">
                <% @photos.each do |photo| %>
                    <div class="col-md-3 col-sm-4 col-xs-6">
                        <%= link_to photo.url do %>
                            <%= image_tag photo.picture.url, class: "img-thumbnail" %>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>


    <div id="eat_blog_div">
        <div class="sol_blog_section">
            <div class="pull-left" style="width:40%"><hr/><hr/></div>
            <div class="pull-left" style="width:20%"><h2>EAT</h2></div>
            <div class="pull-left" style="width:40%"><hr/><hr/></div>
            <div style="clear: both;"></div>
        </div>
        <% @eat_blogs.each do |blog| %>
            <div class="row">
                <div class="col-sm-8">
                    <%= image_tag blog.picture.url %>
                </div>
                <div class="col-sm-4">
                    <h4><%= blog.title %></h4>
                    <p>
                        <%= raw blog.body %>
                    </p>
                </div>
            </div>
        <% end %>
    </div>

    <div id="play_blog_div">
        <div class="sol_blog_section">
            <div class="pull-left" style="width:40%"><hr/><hr/></div>
            <div class="pull-left" style="width:20%"><h2>PLAY</h2></div>
            <div class="pull-left" style="width:40%"><hr/><hr/></div>
            <div style="clear: both;"></div>
        </div>
        <% @play_blogs.each do |blog| %>
            <div class="row">
                <div class="col-sm-8">
                    <%= image_tag blog.picture.url %>
                </div>
                <div class="col-sm-4">
                    <h4><%= blog.title %></h4>
                    <p>
                        <%= raw blog.body %>
                    </p>
                </div>
            </div>
        <% end %>
    </div>

    <div id="stay_blog_div">
        <div class="sol_blog_section">
            <div class="pull-left" style="width:40%"><hr/><hr/></div>
            <div class="pull-left" style="width:20%"><h2>STAY</h2></div>
            <div class="pull-left" style="width:40%"><hr/><hr/></div>
            <div style="clear: both;"></div>
        </div>
        <% @stay_blogs.each do |blog| %>
            <div class="row">
                <div class="col-sm-8">
                    <%= image_tag blog.picture.url %>
                </div>
                <div class="col-sm-4">
                    <h4><%= blog.title %></h4>
                    <p>
                        <%= raw blog.body %>
                    </p>
                </div>
            </div>
        <% end %>
    </div>
    
</div>